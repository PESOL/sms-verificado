<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_company_inherit_form" model="ir.ui.view">
    <field name="name">view.company.inherit.form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="SMS Configuration">
          <group>
            <field name="sms_domain"/>
            <field name="sms_sender"/>
            <field name="sms_login"/>
            <field name="sms_passwd" password="True"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>

</odoo>
